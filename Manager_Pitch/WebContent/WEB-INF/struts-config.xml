<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts 
Configuration 1.3//EN" "http://struts.apache.org/dtds/struts-config_1_3.dtd">
<struts-config>
	<form-beans>
		<form-bean name="usersForm" type="form.UsersForm" />
		<form-bean name="footballPitchForm" type="form.FootballPitchForm" />	
		<form-bean name="hourForm" type="form.HourForm"></form-bean>
		<form-bean name="bookPitchForm" type="form.BookPitchForm"></form-bean>	
	</form-beans>
	<action-mappings>
		<action input="/login.jsp" name="usersForm"
			path="/login" scope="request" type="action.loginAction">
			<forward name="thanhCong" path="/index.jsp" redirect="true"/>
			<forward name="thatBai" path="/login.jsp" />
		</action>
		<action input="/register.jsp" name="usersForm"
			path="/register" scope="request" type="action.RegisterAction">
			<forward name="addUser" path="/register.jsp" />
			<forward name="addedUser" path="/login.jsp" redirect="true"/>
		</action>
		<action input="/index.jsp" name="footballPitchForm"
			path="/danhsachsan" scope="request" type="action.Pitch_List_Action">
			<forward name="danhSachSan" path="/football_pitch_list_page.jsp" />
		</action>
		<action input="/index.jsp" name="usersForm"
			path="/danhsachtaikhoan" scope="request" type="action.Users_List_Action">
			<forward name="danhSachTaiKhoan" path="/users_list_page.jsp" />
		</action>
		<action  input="index.jsp" name ="bookPitchForm"
			path="/datsan" scope="request" type="action.Book_Pitch_Action">
			<forward name="thanhcong" path="/book_pitch.jsp" ></forward>
			
		</action>
		
	</action-mappings>
	<message-resources parameter="action.ApplicationResources" />
	
</struts-config>
